@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travelers Travel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        .nav-link img {
            height: 24px;
            width: 24px;
            margin-right: 8px;
            vertical-align: middle;
        }
    </style>
</head>

<body>
    @{
        var firstName = HttpContextAccessor.HttpContext.Session.GetString("UserFirstName");
    }

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm">
        <div class="container-fluid">

            <!-- Brand -->
            <a class="navbar-brand fw-bold text-primary fs-4"
               asp-area=""
               asp-controller="Home"
               asp-action="Index">
                Travelers Travel
            </a>

            <!-- Mobile toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation Items -->
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav align-items-center">

                    @if (!string.IsNullOrEmpty(firstName))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold"
                               asp-controller="Trips"
                               asp-action="Index">
                                Trips
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold"
                               asp-controller="Account"
                               asp-action="Profile">
                                My Profile
                            </a>
                        </li>

                        <span class="fw-semibold text-primary me-3">
                            Hi, @firstName!
                        </span>

                        <li class="nav-item">
                            <form method="post"
                                  asp-controller="Account"
                                  asp-action="Logout"
                                  class="d-inline">
                                <button type="submit"
                                        class="btn btn-outline-secondary">
                                    Logout
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item me-2">
                            <a class="nav-link text-dark fw-semibold"
                               asp-controller="Register"
                               asp-action="Register">
                                Register
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-outline-primary rounded-pill px-4 fw-semibold"
                               asp-controller="Account"
                               asp-action="Login">
                                Sign In
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN BODY -->
    <div class="container mt-4 pb-4">
        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer class="border-top footer text-muted py-3">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - Travelers Travel -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
