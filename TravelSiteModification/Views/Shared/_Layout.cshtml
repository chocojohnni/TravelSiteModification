@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travelers Travel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        .nav-link img {
            height: 24px;
            width: 24px;
            margin-right: 8px;
            vertical-align: middle;
        }
    </style>
</head>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

<script>
    const connection = new signalR.HubConnectionBuilder()
        .withUrl("/notificationHub")
        .build();

    let notifCount = 0;

    connection.on("ReceiveNotification", function (message) {

        notifCount++;
        document.getElementById("notifCount").innerText = notifCount;
        document.getElementById("notifCount").style.display = "inline";

        const list = document.getElementById("notifList");

        // Remove “no notifications”
        if (list.children.length === 3) list.innerHTML = "";

        // Add new notification
        list.innerHTML += `
            <li class="dropdown-item">
                ${message}
            </li>
        `;
    });

    connection.start().catch(err => console.error(err));
</script>

<body>
    @{
        var firstName = HttpContextAccessor.HttpContext.Session.GetString("UserFirstName");
    }

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm">
        <div class="container-fluid">

            <!-- Brand -->
            @if (!string.IsNullOrEmpty(firstName))
            {
                <!-- Logo is clickable when logged in -->
                <a class="navbar-brand fw-bold text-primary fs-4"
                   asp-area=""
                   asp-controller="TravelSite"
                   asp-action="Index">
                    Travelers Travel
                </a>
            }
            else
            {
                <!-- Logo is visible but not clickable -->
                <span class="navbar-brand fw-bold text-primary fs-4" style="cursor: default;">
                    Travelers Travel
                </span>
            }


            <!-- Mobile toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation Items -->
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav align-items-center">

                    @if (!string.IsNullOrEmpty(firstName))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link position-relative" id="notificationBell" data-bs-toggle="dropdown" href="#">
                                🔔
                                <span id="notifCount" class="badge bg-danger position-absolute top-0 start-100 translate-middle"
                                      style="display:none;">0</span>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end" id="notifList">
                                <li class="dropdown-header">Notifications</li>
                                <li><hr class="dropdown-divider" /></li>
                                <li class="text-center text-muted">No notifications</li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Ticketmaster" asp-action="Index">
                                Ticketmaster Events
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold"
                               asp-controller="Trips"
                               asp-action="Index">
                                Trips
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold"
                               asp-controller="Profile"
                               asp-action="Edit">
                                My Profile
                            </a>
                        </li>

                        <span class="fw-semibold text-primary me-3">
                            Hi, @firstName!
                        </span>

                        <li class="nav-item">
                            <form method="post"
                                  asp-controller="Account"
                                  asp-action="Logout"
                                  class="d-inline">
                                <button type="submit"
                                        class="btn btn-outline-secondary">
                                    Logout
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item me-2">
                            <a class="nav-link text-dark fw-semibold"
                               asp-controller="Register"
                               asp-action="Register">
                                Register
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-outline-primary rounded-pill px-4 fw-semibold"
                               asp-controller="Account"
                               asp-action="Login">
                                Sign In
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN BODY -->
    <div class="container mt-4 pb-4">
        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer class="border-top footer text-muted py-3">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - Travelers Travel -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
