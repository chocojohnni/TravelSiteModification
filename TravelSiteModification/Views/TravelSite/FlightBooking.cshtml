@using TravelSiteModification.Models
@model TravelSiteModification.Models.FlightBookingViewModel

@{
    ViewData["Title"] = "Book Your Flight";
}

<h2>Book Your Flight</h2>

@if (!string.IsNullOrEmpty(ViewBag.StatusMessage))
{
    <div class="alert-success">
        @ViewBag.StatusMessage
    </div>
}

<div class="row">
    <!-- Flight details on the left -->
    <div class="col-md-6">
        <h4>Selected Flight Details</h4>

        @{
            List<FlightImage> flightImages =
            ViewBag.FlightImages as List<FlightImage>;
        }

        @if (flightImages != null && flightImages.Count > 0)
        {
            <div id="flightImageCarousel" class="carousel slide mb-3" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @for (int i = 0; i < flightImages.Count; i++)
                    {
                        FlightImage img = flightImages[i];

                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <img src="@img.ImageUrl"
                                 class="d-block w-100"
                                 alt="@img.Caption" />

                            @if (!string.IsNullOrEmpty(img.Caption))
                            {
                                <div class="carousel-caption d-none d-md-block">
                                    <p>@img.Caption</p>
                                </div>
                            }
                        </div>
                    }
                </div>

                <button class="carousel-control-prev" type="button"
                        data-bs-target="#flightImageCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button"
                        data-bs-target="#flightImageCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        }

        <div class="card mb-3">
            <div class="card-body">
                <p class="mb-1">
                    <strong>Airline:</strong>
                    @ViewBag.AirlineName
                </p>
                <p class="mb-1">
                    <strong>Departure City:</strong>
                    @ViewBag.DepartureCity
                </p>
                <p class="mb-1">
                    <strong>Arrival City:</strong>
                    @ViewBag.ArrivalCity
                </p>
                <p class="mb-1">
                    <strong>Departure Time:</strong>
                    @ViewBag.DepartureTime.ToString("MMMM dd, yyyy HH:mm")
                </p>
                <p class="mb-1">
                    <strong>Arrival Time:</strong>
                    @Model.ArrivalTime.ToString("MMMM dd, yyyy HH:mm")
                </p>
                <p class="h5 mt-3">
                    <strong>Total Price:</strong>
                    @Model.Price.ToString("C")
                </p>
            </div>
        </div>
    </div>

    <!-- Booking form on the right -->
    <div class="col-md-6">
        <h4>Passenger &amp; Payment Information</h4>

        <form method="post" asp-controller="Flight" asp-action="Book">
            <!-- Keep FlightId and Price across post -->
            <input type="hidden" asp-for="FlightId" />
            <input type="hidden" asp-for="Price" />

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SeatsBooked" class="form-label"></label>
                <input asp-for="SeatsBooked" class="form-control" />
                <span asp-validation-for="SeatsBooked" class="text-danger"></span>
            </div>

            <hr />

            <div class="mb-3">
                <label asp-for="CardNumber" class="form-label"></label>
                <input asp-for="CardNumber" class="form-control" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ExpiryDate" class="form-label"></label>
                <input asp-for="ExpiryDate" class="form-control" placeholder="MM/YY" />
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CVV" class="form-label"></label>
                <input asp-for="CVV" class="form-control" />
                <span asp-validation-for="CVV" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-2">
                Confirm &amp; Book Flight
            </button>
        </form>

        <div class="mt-3 text-danger">
            @Html.ValidationSummary()
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}