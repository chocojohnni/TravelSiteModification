@model TravelSiteModification.Models.EventBookingViewModel

@{
    ViewData["Title"] = "Book Event Tickets";
}

<h2>Book Event Tickets</h2>

@if (ViewBag.StatusMessage != null)
{
    bool isSuccess = ViewBag.IsSuccess == null ? false : (bool)ViewBag.IsSuccess;

    <div class="alert-success">
        @ViewBag.StatusMessage
    </div>
}

<div class="row">
    <!-- Event details -->
    <div class="col-md-6">
        <h4>Selected Event Details</h4>
        <div class="card mb-3">
            <div class="card-body">
                <p><strong>Event:</strong> @ViewBag.EventName</p>
                <p><strong>Location:</strong> @ViewBag.EventLocation</p>
                <p>
                    <strong>Date:</strong>
                    @(((DateTime)ViewBag.EventDate).ToString("MMMM dd, yyyy"))
                </p>
                <p><strong>Price per Ticket:</strong> @((decimal)ViewBag.PricePerTicket).ToString("C")</p>
                <p class="mt-2"><strong>Description:</strong> @ViewBag.Description</p>
            </div>
        </div>
    </div>

    <!-- Booking form -->
    <div class="col-md-6">
        <h4>Ticket & Contact Information</h4>

        <form method="post" asp-controller="Event" asp-action="Book">
            <!-- Keep EventId and Price across post -->
            <input type="hidden" asp-for="EventId" />
            <input type="hidden" asp-for="Price" />

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TicketCount" class="form-label"></label>
                <input asp-for="TicketCount" class="form-control" />
                <span asp-validation-for="TicketCount" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-2">
                Confirm &amp; Book Tickets
            </button>
        </form>

        <div class="mt-3 text-danger">
            @Html.ValidationSummary()
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
