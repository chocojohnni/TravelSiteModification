@model TravelSiteModification.Models.TicketmasterSearchViewModel

@{
    ViewData["Title"] = "Find Events (Ticketmaster)";
}

<div class="container py-4">
    <h2 class="mb-3 text-primary">Find Events (Ticketmaster)</h2>

    <form asp-action="Index" method="post" class="row g-3 mb-4">
        <div class="col-md-4">
            <label asp-for="City" class="form-label">City</label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <label asp-for="StateCode" class="form-label">State (optional)</label>
            <input asp-for="StateCode" class="form-control" placeholder="PA" />
        </div>

        <div class="col-md-4">
            <label asp-for="Keyword" class="form-label">Keyword (optional)</label>
            <input asp-for="Keyword" class="form-control" placeholder="concert, NBA, comedy..." />
        </div>

        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Search</button>
        </div>
    </form>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-warning">
            @Model.ErrorMessage
        </div>
    }

    @if (Model.HasSearched && Model.Results != null && Model.Results.Count > 0)
    {
        <h4 class="mt-3">Events Found (@Model.Results.Count)</h4>

        <div class="row mt-3">
            @foreach (var ev in Model.Results)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(ev.ImageUrl))
                        {
                            <img src="@ev.ImageUrl"
                                 class="card-img-top"
                                 alt="@ev.Name" />
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@ev.Name</h5>

                            <p class="card-text mb-1">
                                <strong>@ev.Venue</strong><br />
                                @ev.City
                            </p>

                            @if (ev.EventDate.HasValue)
                            {
                                <p class="card-text">
                                    <small class="text-muted">
                                        @ev.EventDate.Value.ToString("MMMM dd, yyyy")
                                    </small>
                                </p>
                            }

                            <div class="mt-auto">
                                <a href="@ev.Url"
                                   target="_blank"
                                   class="btn btn-outline-primary btn-sm">
                                    View on Ticketmaster
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
