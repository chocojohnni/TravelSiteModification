@{
    ViewData["Title"] = "Home";
    var firstName = ViewBag.FirstName as string;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .hero-section {
        background: url('https://as2.ftcdn.net/v2/jpg/03/17/05/55/1000_F_317055571_pHeS7dem8Om1CuwuQrn8emvXVsxPEp2t.jpg') no-repeat center center;
        background-size: cover;
        color: white;
        padding: 80px 0;
        text-align: center;
        position: relative;
        margin-bottom: 30px;
    }

        .hero-section::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.4);
        }

    .hero-content {
        position: relative;
        z-index: 2;
    }

        .hero-content h1 {
            font-size: 3.5rem;
            font-weight: bold;
            margin-bottom: 15px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.6);
        }

        .hero-content p {
            font-size: 1.25rem;
            margin-bottom: 30px;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
        }

    .nav-tabs-centered {
        display: flex;
        justify-content: center;
        flex-wrap: nowrap;
        overflow-x: auto;
    }

    .nav-link img {
        height: 24px;
        width: 24px;
        margin-right: 8px;
    }
</style>

<!-- HERO SECTION -->
<div class="hero-section">
    <div class="container hero-content">
        <h1>Your Next Adventure Starts Here</h1>
        <p>Find the best deals on hotels, flights, cars, and unforgettable events!</p>
        <a href="#travelTabs" class="btn btn-warning btn-lg fw-bold">Start Your Search Below</a>
    </div>
</div>

<div class="container py-4">

    <!-- ACCOUNT DASHBOARD SHOWN WHEN LOGGED IN -->
    @if (!string.IsNullOrEmpty(firstName))
    {
        <div class="mb-5 p-4 rounded-3 bg-light shadow-sm text-center">
            <h3 class="fw-bold text-primary mb-4">Your Account Dashboard</h3>

            <div class="row justify-content-center">
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card shadow-sm p-3">
                        <a asp-controller="Trips" asp-action="Index"
                           class="text-decoration-none fw-semibold fs-5 text-dark">View Past Trips</a>
                        <p class="text-muted small mb-0">Review your travel history.</p>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card shadow-sm p-3">
                        <a asp-controller="Account" asp-action="Profile"
                           class="text-decoration-none fw-semibold fs-5 text-dark">Edit My Profile</a>
                        <p class="text-muted small mb-0">Update your details.</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- TABS -->
    <ul class="nav nav-tabs nav-tabs-centered" id="travelTabs" role="tablist">

        <!-- Hotels -->
        <li class="nav-item">
            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#hotels-tab">
                <img src="https://media.istockphoto.com/id/119926339/photo/resort-swimming-pool.jpg" />
                Hotels
            </button>
        </li>

        <!-- Flights -->
        <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#flights-tab">
                <img src="https://images.trvl-media.com/media/content/shared/images/travelguides/tvly/flight-desktop.jpg" />
                Flights
            </button>
        </li>

        <!-- Cars -->
        <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#cars-tab">
                <img src="https://imageio.forbes.com/specials-images/imageserve/5d3703e2f1176b00089761a6/2020-Chevrolet-Corvette-Stingray/0x0.jpg" />
                Cars
            </button>
        </li>

        <!-- Events -->
        <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#events-tab">
                <img src="https://capturely.com/wp-content/uploads/events-carousel-15.webp" />
                Events & Attractions
            </button>
        </li>

        <!-- Packages -->
        <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#packages-tab">
                <img src="https://forever.travel-assets.com/flex/flexmanager/images/2021/06/23/TVLY_FamilyVacationDeals_lpheroBC_1680x945_20210623.jpg" />
                Packages
            </button>
        </li>

    </ul>

    <!-- TAB CONTENT -->
    <div class="tab-content tab-content-panel">

        <!-- HOTELS -->
        <div class="tab-pane fade show active" id="hotels-tab">
            <h5 class="mb-3">Search Hotels</h5>

            <form method="post" asp-action="SearchHotels">
                <label class="form-label">Destination City/State</label>
                <select name="destination" class="form-select mb-3">
                    <option value="">Select Destination</option>
                    <option>New York</option>
                    <option>Los Angeles</option>
                    <option>Miami</option>
                    <option>Seattle</option>
                </select>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Check-in Date</label>
                        <input type="date" name="checkIn" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Check-out Date</label>
                        <input type="date" name="checkOut" class="form-control" />
                    </div>
                </div>

                <button class="btn btn-primary w-100">Search Hotels</button>
            </form>
        </div>

        <!-- FLIGHTS -->
        <div class="tab-pane fade" id="flights-tab">
            <h5 class="mb-3">Search Flights</h5>

            <form method="post" asp-action="SearchFlights">
                <label class="form-label">Departure City or Airport</label>
                <select name="origin" class="form-select mb-3">
                    <option value="">Select Departure City</option>
                    <option>Philadelphia</option>
                    <option>New York</option>
                    <option>Miami</option>
                    <option>Seattle</option>
                </select>

                <label class="form-label">Arrival City or Airport</label>
                <select name="destination" class="form-select mb-3">
                    <option value="">Select Arrival City</option>
                    <option>Philadelphia</option>
                    <option>New York</option>
                    <option>Miami</option>
                    <option>Seattle</option>
                </select>

                <button class="btn btn-primary w-100">Search Flights</button>
            </form>
        </div>

        <!-- CARS -->
        <div class="tab-pane fade" id="cars-tab">
            <h5 class="mb-3">Search Rental Cars</h5>

            <form method="post" asp-action="SearchCars">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Pick-up Location</label>
                        <select name="pickupLocation" class="form-select">
                            <option value="">Select Pickup City</option>
                            <option value="NYC">New York, NY</option>
                            <option value="LAX">Los Angeles, CA</option>
                            <option value="MIA">Miami, FL</option>
                            <option value="SEA">Seattle, WA</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Drop-off Location</label>
                        <select name="dropoffLocation" class="form-select">
                            <option value="">Select Dropoff City</option>
                            <option value="NYC">New York, NY</option>
                            <option value="LAX">Los Angeles, CA</option>
                            <option value="MIA">Miami, FL</option>
                            <option value="SEA">Seattle, WA</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Pick-up Date</label>
                        <input type="date" name="pickupDate" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Drop-off Date</label>
                        <input type="date" name="dropoffDate" class="form-control" />
                    </div>
                </div>

                <button class="btn btn-primary w-100">Search Cars</button>
            </form>
        </div>

        <!-- EVENTS -->
        <div class="tab-pane fade" id="events-tab">
            <h5 class="mb-3">Search Events & Attractions</h5>

            <form method="post" asp-action="SearchEvents">
                <label class="form-label">City or Attraction</label>
                <select name="eventLocation" class="form-select mb-3">
                    <option value="">Select City</option>
                    <option>Orlando</option>
                    <option>Miami</option>
                    <option>Seattle</option>
                    <option>Las Vegas</option>
                    <option>New York</option>
                </select>

                <label class="form-label">Date (Optional)</label>
                <input type="date" name="eventDate" class="form-control mb-3" />

                <button class="btn btn-primary w-100">Search Events</button>
            </form>
        </div>

        <!-- PACKAGES -->
        <div class="tab-pane fade" id="packages-tab">
            <h5 class="mb-3">Search Vacation Packages</h5>

            <form method="post" asp-action="SearchPackages">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Origin City</label>
                        <input name="origin" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Destination</label>
                        <input name="destination" class="form-control" />
                    </div>
                </div>

                <label class="form-label">Travel Date</label>
                <input type="date" name="date" class="form-control mb-3" />

                <button class="btn btn-primary w-100 mt-3">Search Packages</button>
            </form>
        </div>

    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
