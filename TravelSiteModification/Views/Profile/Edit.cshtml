@model TravelSiteModification.Models.EditProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container vh-100 d-flex flex-column justify-content-center align-items-center">

    <h2 class="mb-4 fw-bold text-primary text-center">Travelers Travel</h2>

    <div class="card shadow-lg p-4" style="max-width: 550px; width: 100%;">
        <h4 class="text-center mb-4 text-secondary">Manage Your Profile ⚙️</h4>

        <h5 class="mb-3 border-bottom pb-1">Account Credentials</h5>

        <form asp-action="Edit" method="post">

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Email Address</label>
                    <input asp-for="Email" class="form-control" type="email" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">New Password</label>
                    <input asp-for="Password" class="form-control" type="password"
                           placeholder="Leave blank to keep current" />
                </div>
            </div>

            <h5 class="mt-4 mb-3 border-bottom pb-1">Contact Details</h5>

            <div class="row g-3">
                <div class="col-12">
                    <label class="form-label">Street Address</label>
                    <input asp-for="Address" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">City</label>
                    <input asp-for="City" class="form-control" />
                </div>

                <div class="col-md-3">
                    <label class="form-label">State</label>
                    <input asp-for="State" class="form-control" maxlength="2" />
                </div>

                <div class="col-md-3">
                    <label class="form-label">Zip Code</label>
                    <input asp-for="Zip" class="form-control" type="number" />
                </div>

                <div class="col-12">
                    <label class="form-label">Phone Number</label>
                    <input asp-for="Phone" class="form-control" type="tel" />
                </div>
            </div>

            <h5 class="mt-4 mb-3 border-bottom pb-1">Payment Method</h5>

            <div class="row g-3">
                <div class="col-12">
                    <label class="form-label">Card Type</label>
                    <select asp-for="CardType" class="form-select">
                        <option value="">-- Select Card Type --</option>
                        <option value="Visa">Visa</option>
                        <option value="Mastercard">Mastercard</option>
                        <option value="American Express">American Express</option>
                        <option value="Discover">Discover</option>
                    </select>
                </div>

                <div class="col-12">
                    <label class="form-label">Card Number</label>
                    <input asp-for="CardNumber" class="form-control" maxlength="16" type="number" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Expiry (MM/YY)</label>
                    <input asp-for="Expiry" class="form-control" maxlength="5" placeholder="MM/YY" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">CVV</label>
                    <input asp-for="CVV" class="form-control" maxlength="4" type="number" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Card Holder Name</label>
                    <input asp-for="CardHolder" class="form-control" />
                </div>
            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Save Changes</button>
            </div>

        </form>

        <div class="d-grid mt-3">
            <a href="/TravelSite" class="btn btn-outline-secondary">Return to Home</a>
        </div>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="mt-3 text-center text-success">
                @Model.Message
            </div>
        }
    </div>
</div>
