@model TravelSiteModification.Models.FlightSearchViewModel

@{
    ViewData["Title"] = "Find Flights (Web API)";
}

<h2>Find Flights</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-warning">@Model.ErrorMessage</div>
}

<form asp-action="Find" method="post">
    <div class="row">
        <div class="col-md-6">
            <h4>Departure</h4>
            <div class="mb-3">
                <label asp-for="DepCity" class="form-label"></label>
                <input asp-for="DepCity" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="DepState" class="form-label"></label>
                <input asp-for="DepState" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <h4>Arrival</h4>
            <div class="mb-3">
                <label asp-for="ArrCity" class="form-label"></label>
                <input asp-for="ArrCity" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="ArrState" class="form-label"></label>
                <input asp-for="ArrState" class="form-control" />
            </div>
        </div>
    </div>

    <h4>Flight Requirements (optional)</h4>

    <div class="mb-3">
        <label asp-for="AirlineID" class="form-label">Airline</label>
        <select asp-for="AirlineID" class="form-select">
            <option value="">Any Airline</option>
            @foreach (var carrier in Model.Carriers)
            {
                <option value="@carrier.AirLineID">@carrier.AirlineName</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="MaxPrice" class="form-label"></label>
        <input asp-for="MaxPrice" class="form-control" />
    </div>

    <div class="mb-3 form-check">
        <input asp-for="NonStop" class="form-check-input" />
        <label asp-for="NonStop" class="form-check-label"></label>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="FirstClass" class="form-check-input" />
        <label asp-for="FirstClass" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Search Flights</button>
</form>

@if (Model.Flights != null && Model.Flights.Count > 0)
{
    <hr />
    <h3>Available Flights</h3>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Flight</th>
                <th>Route</th>
                <th>Departure</th>
                <th>Arrival</th>
                <th>Price</th>
                <th>Seats</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var f in Model.Flights)
            {
                <tr>
                    <td>@f.FlightID</td>
                    <td>@f.DepartureCity → @f.ArrivalCity</td>
                    <td>@f.DepartureTime</td>
                    <td>@f.ArrivalTime</td>
                    <td>@f.Price.ToString("C")</td>
                    <td>@f.SeatsAvailable</td>
                    <td>
                        <a asp-controller="Flight"
                           asp-action="Book"
                           asp-route-flightId="@f.FlightID"
                           class="btn btn-sm btn-success">
                            Book
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}