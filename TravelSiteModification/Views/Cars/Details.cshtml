@model CarDetailViewModel
@{
    ViewData["Title"] = "Car Details";
}

<h2 class="mb-3">Car Details</h2>

@if (Model == null)
{
    <div class="alert alert-danger">
        Car details could not be loaded.
    </div>
}
else
{
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h3 class="card-title">@Model.CarModel (@Model.Year)</h3>
            <p class="text-muted">@Model.AgencyName</p>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Pickup Location:</strong> @Model.PickupLocationCode
                </div>
                <div class="col-md-6">
                    <strong>Dropoff Location:</strong> @Model.DropoffLocationCode
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Seats:</strong> @Model.Seats
                </div>
                <div class="col-md-6">
                    <strong>Transmission:</strong> @Model.Transmission
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Price Per Day:</strong> $@Model.PricePerDay
                </div>
                <div class="col-md-6">
                    <strong>Total Price:</strong> $@Model.TotalPrice
                </div>
            </div>

            <hr />

            <h5>Car Description</h5>
            <p>@Model.Description</p>

            <hr />

            <a href="@Url.Action("Index", "Cars")" class="btn btn-secondary">
                Back to Results
            </a>

            <a href="@Url.Action("Book", "Cars", new { carId = Model.CarID })"
               class="btn btn-primary ms-2">
                Book This Car
            </a>
        </div>
    </div>
}
