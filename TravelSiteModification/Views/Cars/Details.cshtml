@model TravelSiteModification.Models.CarDetailViewModel

@{
    ViewData["Title"] = "Car Details";
}

<div class="container py-5">

    <a asp-controller="Cars" asp-action="Index" class="btn btn-sm btn-outline-secondary mb-3">
        &larr; Back to Results
    </a>

    <h2 class="text-primary mb-4">Selected Car & Agency Details</h2>

    <div class="row">
        <!-- LEFT COLUMN: CAR DETAILS -->
        <div class="col-md-5">
            <div class="card mb-4">
                <img src="@Model.ImagePath" class="card-img-top" style="max-height: 250px; object-fit: cover;" />

                <div class="card-body">
                    <h4 class="card-title fw-bold">@Model.CarModel</h4>
                    <p class="mb-1"><strong>Type:</strong> @Model.CarType</p>
                    <p class="mb-1"><strong>Price per Day:</strong> @Model.PricePerDay.ToString("C")</p>
                    <p class="mb-1"><strong>Car ID:</strong> @Model.CarID</p>
                </div>
            </div>

            <form method="post" asp-controller="Cars" asp-action="Select">
                <input type="hidden" name="carId" value="@Model.CarID" />
                <button class="btn btn-success btn-lg w-100">
                    Book This Car
                </button>
            </form>
        </div>

        <!-- RIGHT COLUMN: AGENCY DETAILS + OTHER CARS -->
        <div class="col-md-7">

            <h4 class="fw-bold border-bottom pb-2">Rental Agency Information</h4>

            <p class="mb-1"><strong>Agency:</strong> @Model.AgencyName</p>
            <p class="mb-1"><strong>Phone:</strong> @Model.AgencyPhone</p>
            <p class="mb-1"><strong>Email:</strong> @Model.AgencyEmail</p>

            <h4 class="fw-bold border-bottom pb-2 mt-4">Other Available Cars</h4>

            @if (Model.OtherAgencyCars != null && Model.OtherAgencyCars.Count > 0)
            {
                <table class="table table-striped table-bordered mt-2">
                    <thead class="table-secondary">
                        <tr>
                            <th>Model</th>
                            <th>Type</th>
                            <th>Price/Day</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var car in Model.OtherAgencyCars)
                        {
                            <tr>
                                <td>@car.CarModel</td>
                                <td>@car.CarType</td>
                                <td class="text-end">@car.PricePerDay.ToString("C")</td>
                                <td>
                                    <a asp-controller="Cars"
                                       asp-action="Details"
                                       asp-route-carId="@car.CarID"
                                       asp-route-agencyId="@car.AgencyID"
                                       class="btn btn-outline-info btn-sm">
                                        View Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted fst-italic">No other cars available from this agency.</p>
            }

        </div>
    </div>

</div>
