@model CarSearchViewModel

<form asp-action="Index" method="get" class="p-3 mb-4 border rounded-3 bg-light">

    <h5 class="fw-bold mb-3">Refine Your Search</h5>

    <div class="row g-3 mb-3">
        <div class="col-md-3">
            <label class="form-label">Pickup Location</label>
            <select name="PickupLocation" class="form-select">
                <option value="">-- Select Pickup City --</option>
                <option value="NYC" selected="@(Model.PickupLocation == "NYC")">New York, NY</option>
                <option value="LAX" selected="@(Model.PickupLocation == "LAX")">Los Angeles, CA</option>
                <option value="MIA" selected="@(Model.PickupLocation == "MIA")">Miami, FL</option>
                <option value="SEA" selected="@(Model.PickupLocation == "SEA")">Seattle, WA</option>
            </select>
        </div>

        <div class="col-md-3">
            <label class="form-label">Dropoff Location</label>
            <select name="DropoffLocation" class="form-select">
                <option value="">-- Select Dropoff City --</option>
                <option value="NYC" selected="@(Model.DropoffLocation == "NYC")">New York, NY</option>
                <option value="LAX" selected="@(Model.DropoffLocation == "LAX")">Los Angeles, CA</option>
                <option value="MIA" selected="@(Model.DropoffLocation == "MIA")">Miami, FL</option>
                <option value="SEA" selected="@(Model.DropoffLocation == "SEA")">Seattle, WA</option>
            </select>
        </div>

        <div class="col-md-3">
            <label class="form-label">Pickup Date</label>
            <input type="date" name="PickupDate" value="@Model.PickupDateString" class="form-control" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Dropoff Date</label>
            <input type="date" name="DropoffDate" value="@Model.DropoffDateString" class="form-control" />
        </div>
    </div>

    <div class="text-end">
        <button class="btn btn-warning" type="submit">Update Search</button>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p class="text-danger mt-2">@Model.ErrorMessage</p>
    }

</form>
