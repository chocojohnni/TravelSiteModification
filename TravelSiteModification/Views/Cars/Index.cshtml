@model TravelSiteModification.Models.CarSearchViewModel

@{
    ViewData["Title"] = "Car Search";
}

<div class="container py-5">

    <h1 class="mb-4">Car Rental Search</h1>

    <form method="post" asp-action="Index" class="p-4 border rounded bg-light mb-4">

        <div class="row g-3">
            <!-- Pickup -->
            <div class="col-md-3">
                <label class="form-label">Pickup Location</label>
                <select asp-for="PickupLocation" asp-items="Model.Locations" class="form-select"></select>
            </div>

            <!-- Dropoff -->
            <div class="col-md-3">
                <label class="form-label">Dropoff Location</label>
                <select asp-for="DropoffLocation" asp-items="Model.Locations" class="form-select"></select>
            </div>

            <!-- Pickup Date -->
            <div class="col-md-3">
                <label class="form-label">Pickup Date</label>
                <input asp-for="PickupDate" type="date" class="form-control" />
            </div>

            <!-- Dropoff Date -->
            <div class="col-md-3">
                <label class="form-label">Dropoff Date</label>
                <input asp-for="DropoffDate" type="date" class="form-control" />
            </div>
        </div>

        <div class="text-end mt-3">
            <button class="btn btn-primary px-4">Search Cars</button>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger mt-3">
                @Model.ErrorMessage
            </div>
        }
    </form>

    @if (Model.Results != null && Model.Results.Count > 0)
    {
        <h3 class="mt-4">Available Cars</h3>

        <table class="table table-bordered table-striped mt-3">
            <thead class="table-dark">
                <tr>
                    <th>Car</th>
                    <th>Model</th>
                    <th>Type</th>
                    <th>Price / Day</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var c in Model.Results)
                {
                    <tr>
                        <td class="text-center" style="width: 120px;">
                            <img src="@c.ImagePath" class="img-fluid rounded" style="max-height: 80px;" />
                        </td>

                        <td>@c.CarModel</td>
                        <td>@c.CarType</td>

                        <td class="text-end">@c.PricePerDay.ToString("C")</td>

                        <td>
                            @if (c.Available)
                            {
                                <span class="text-success fw-bold">Available</span>
                            }
                            else
                            {
                                <span class="text-danger">Reserved</span>
                            }
                        </td>

                        <td>
                            @if (c.Available)
                            {
                                <a asp-controller="Cars"
                                   asp-action="Details"
                                   asp-route-carId="@c.CarID"
                                   asp-route-agencyId="@c.AgencyID"
                                   class="btn btn-primary btn-sm">
                                    View Details
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-secondary btn-sm" disabled>Unavailable</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        if (!string.IsNullOrEmpty(Model.PickupLocation))
        {
            <p class="text-muted fs-5 mt-4">No cars found for your search.</p>
        }
    }

</div>
