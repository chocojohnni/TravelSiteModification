@model CarSearchViewModel

<h2 class="mb-4">Find Your Rental Car</h2>

<form method="post">
    <div class="row g-3">
        <div class="col-md-3">
            <label>Pickup Location</label>
            <select asp-for="PickupLocation" class="form-control">
                <option value="">Choose...</option>
                @foreach (var loc in Model.Locations)
                {
                    <option>@loc</option>
                }
            </select>
        </div>

        <div class="col-md-3">
            <label>Dropoff Location</label>
            <select asp-for="DropoffLocation" class="form-control">
                <option value="">Choose...</option>
                @foreach (var loc in Model.Locations)
                {
                    <option>@loc</option>
                }
            </select>
        </div>

        <div class="col-md-3">
            <label>Pickup Date</label>
            <input asp-for="PickupDate" type="date" class="form-control" />
        </div>

        <div class="col-md-3">
            <label>Dropoff Date</label>
            <input asp-for="DropoffDate" type="date" class="form-control" />
        </div>
    </div>

    <button class="btn btn-primary mt-3">Search</button>
</form>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p class="alert alert-danger mt-3">@Model.ErrorMessage</p>
}

@if (Model.Results.Any())
{
    <hr />
    <h4 class="mb-3">Available Cars</h4>

    <div class="row">
        @foreach (var car in Model.Results)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@car.ImagePath" class="card-img-top" />

                    <div class="card-body">
                        <h5>@car.CarModel</h5>
                        <p class="text-muted">@car.CarType</p>
                        <p><strong>@car.PricePerDay.ToString("C")/day</strong></p>

                        <a class="btn btn-outline-primary"
                           href="/Cars/Details?carId=@car.CarID&agencyId=@car.AgencyID">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
