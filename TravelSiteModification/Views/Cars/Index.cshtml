@model CarSearchViewModel

@{
    ViewData["Title"] = "Car Rental Search Results";
}

<div class="container py-5">

    <h1 class="mb-4">Car Rental Search Results</h1>

    <!-- Search refinement form -->
    @await Html.PartialAsync("_SearchCarForm", Model)

    <hr />

    <!-- Search criteria summary -->
    @if (!string.IsNullOrEmpty(Model.PickupLocation))
    {
        <p class="fs-5">
            Showing results for car rentals from
            <strong>@Model.PickupLocation</strong>
            to
            <strong>@Model.DropoffLocation</strong>
        </p>
    }

    <!-- Car results table -->
    @await Html.PartialAsync("_CarListTable", Model)

</div>
