@model TravelSiteModification.Models.CarBookingViewModel

@{
    ViewData["Title"] = "Book Your Rental Car";
}

<div class="container mt-5">
    <h1>Complete Your Car Rental Booking</h1>
    <hr />

    <!-- SELECTED CAR DETAILS -->
    <div class="row mb-4">
        <div class="col-md-12">
            <h2>Selected Car Details</h2>
            <div class="card card-body bg-light">
                <p><strong>Model:</strong> @Model.CarModel</p>
                <p><strong>Type:</strong> @Model.CarType</p>
                <p><strong>Agency:</strong> @Model.AgencyName</p>
                <p><strong>Pick-up Location:</strong> @Model.PickupLocation</p>
                <p><strong>Drop-off Location:</strong> @Model.DropoffLocation</p>
                <p><strong>Pick-up Date:</strong> @Model.PickupDate</p>
                <p><strong>Drop-off Date:</strong> @Model.DropoffDate</p>
                <hr />
                <h5 class="fw-bold">
                    Total Estimated Cost: @Model.TotalCost.ToString("C")
                </h5>
            </div>
        </div>
    </div>

    <form method="post">
        <div class="row mb-4">
            <!-- DRIVER INFO -->
            <div class="col-md-6">
                <h2>Driver Information</h2>

                <div class="mb-3">
                    <label class="form-label">First Name</label>
                    <input asp-for="FirstName" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control" required />
                </div>
            </div>

            <!-- PAYMENT INFO -->
            <div class="col-md-6">
                <h2>Payment Details (Mock)</h2>

                <div class="mb-3">
                    <label class="form-label">Card Number</label>
                    <input asp-for="CardNumber" class="form-control" maxlength="16" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Expiry Date (MM/YY)</label>
                    <input asp-for="ExpiryDate" class="form-control" maxlength="5" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">CVV</label>
                    <input asp-for="CVV" class="form-control" maxlength="3" required />
                </div>
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-12">
                <button class="btn btn-primary btn-lg" type="submit">
                    Confirm & Book Car
                </button>

                <span class="ms-3">
                    @Html.Raw(Model.Status)
                </span>
            </div>
        </div>
    </form>

    <div class="row">
        <div class="col-12">
            <a asp-controller="Cars" asp-action="Index" class="btn btn-secondary">
                &lt; Back to Car Selection
            </a>
        </div>
    </div>
</div>
