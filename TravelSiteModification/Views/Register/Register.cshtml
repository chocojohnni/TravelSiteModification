@model TravelSiteModification.Models.RegisterViewModel

<h2>Create Your Account</h2>

<form method="post" asp-action="Register" asp-controller="Register">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <label>First Name</label>
    <input asp-for="FirstName" class="form-control" />
    <span asp-validation-for="FirstName" class="text-danger"></span>

    <label class="mt-2">Last Name</label>
    <input asp-for="LastName" class="form-control" />
    <span asp-validation-for="LastName" class="text-danger"></span>

    <label class="mt-2">Email</label>
    <input asp-for="Email" class="form-control" type="email" />
    <span asp-validation-for="Email" class="text-danger"></span>

    <label class="mt-2">Password</label>
    <input asp-for="Password" class="form-control" type="password" />
    <span asp-validation-for="Password" class="text-danger"></span>

    <hr class="my-4" />
    <h4>Security Questions</h4>
    <p class="text-muted">These will be used to help you recover your username or reset your password.</p>

    <!-- Question 1 -->
    <label class="mt-2">Security Question 1</label>
    <select asp-for="Question1Id"
            asp-items="Model.SecurityQuestions"
            class="form-control">
        <option value="">-- Select a question --</option>
    </select>
    <span asp-validation-for="Question1Id" class="text-danger"></span>

    <label class="mt-1">Answer</label>
    <input asp-for="Answer1" class="form-control" />
    <span asp-validation-for="Answer1" class="text-danger"></span>

    <!-- Question 2 -->
    <label class="mt-3">Security Question 2</label>
    <select asp-for="Question2Id"
            asp-items="Model.SecurityQuestions"
            class="form-control">
        <option value="">-- Select a question --</option>
    </select>
    <span asp-validation-for="Question2Id" class="text-danger"></span>

    <label class="mt-1">Answer</label>
    <input asp-for="Answer2" class="form-control" />
    <span asp-validation-for="Answer2" class="text-danger"></span>

    <!-- Question 3 -->
    <label class="mt-3">Security Question 3</label>
    <select asp-for="Question3Id"
            asp-items="Model.SecurityQuestions"
            class="form-control">
        <option value="">-- Select a question --</option>
    </select>
    <span asp-validation-for="Question3Id" class="text-danger"></span>

    <label class="mt-1">Answer</label>
    <input asp-for="Answer3" class="form-control" />
    <span asp-validation-for="Answer3" class="text-danger"></span>

    <button type="submit" class="btn btn-primary mt-4">Continue</button>
</form>